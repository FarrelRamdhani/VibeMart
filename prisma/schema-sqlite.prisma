// This is your Prisma schema file for SQLite,
// learn more about it in docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   // BOOKKEEPER, STORE_CLERK, WAREHOUSE_CLERK
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Category {
  id          String   @id
  name        String   @unique
  description String?

  products Product[]

  @@map("categories")
}

model Location {
  id           String @id
  warehouseCode String
  aisle        String
  rack         String
  shelf        String
  bin          String

  products Product[]

  @@map("locations")
}

model Product {
  id                  String   @id
  name                String
  description         String?
  manufacturer        String?
  productCode         Int      @unique
  codeSource          String   // AUTO, MANUAL
  latestEntryDate    DateTime
  expirationDate     DateTime?
  inStock            Int      @default(0)
  lowStockWarning    Boolean  @default(false)
  lowStockThreshold  Int      @default(20)
  buyPrice           Decimal
  locationId         String
  categoryId         String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  category   Category   @relation(fields: [categoryId], references: [id])
  location   Location   @relation(fields: [locationId], references: [id])
  receipts   Receipt[]
  sales      Sale[]
  alerts     Alert[]

  @@map("products")
}

model Receipt {
  id            String   @id @default(uuid())
  productId     String
  unitBuyPrice  Decimal
  quantity      Int
  totalBuyPrice Decimal
  receivedDate  DateTime
  createdAt     DateTime @default(now())

  // Relations
  product Product @relation(fields: [productId], references: [id])

  @@map("receipts")
}

model Sale {
  id                   String   @id @default(uuid())
  productId            String
  productNameSnapshot  String
  productCodeSnapshot  Int
  sellPrice            Decimal
  sellTax              Decimal
  sellDate             DateTime
  quantity             Int
  sellTotal            Decimal

  // Relations
  product Product @relation(fields: [productId], references: [id])

  @@map("sales")
}

model Alert {
  id        String   @id @default(uuid())
  productId String
  type      String   // LOW_STOCK
  details   String
  createdAt DateTime @default(now())

  // Relations
  product Product @relation(fields: [productId], references: [id])

  @@map("alerts")
}

model Transaction {
  id          String   @id @default(uuid())
  type        String   // SALE, PURCHASE, INVENTORY_ADJUSTMENT, EXPENSE, REVENUE
  description String
  amount      Decimal
  productId   String?
  quantity    Int?
  createdAt   DateTime @default(now())

  @@map("transactions")
}